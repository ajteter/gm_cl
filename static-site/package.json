{
  "name": "h5-games-static",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Static H5 Games Portal for Cloudflare Pages",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --config vite.config.analyze.js",
    "build:size": "npm run build && ls -lah dist/assets/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "deploy:preview": "npm run build && npm run preview",
    "deploy:prepare": "node scripts/deploy.js",
    "deploy:staging": "wrangler pages deploy dist --project-name=h5-games-static-staging",
    "deploy:production": "wrangler pages deploy dist --project-name=h5-games-static",
    "deploy:status": "node scripts/deployment-status.js",
    "test:local": "node scripts/test-local-deployment.js",
    "validate:deployment": "node scripts/validate-deployment.js",
    "verify:build": "node scripts/verify-build.js",
    "verify:deployment": "node scripts/verify-deployment.js",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:desktop": "npm run build && lhci autorun --config=lighthouserc.desktop.json",
    "perf:audit": "npm run lighthouse",
    "perf:report": "node scripts/performance-report.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^7.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@lhci/cli": "^0.15.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "vite": "^5.4.8",
    "vitest": "^1.6.0"
  }
}
